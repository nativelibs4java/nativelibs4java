		<plugin>
			<groupId>org.scala-tools</groupId>
			<artifactId>maven-scala-plugin</artifactId>
			<executions>
				<execution>
					<goals>
						<goal>compile</goal>
						<goal>testCompile</goal>
					</goals>
				</execution>
			</executions>
			<configuration>
				<args>
					<arg>-optimise</arg>
				</args>
			  <jvmArgs>
				<jvmArg>-Xms64m</jvmArg>
				<jvmArg>-Xmx1024m</jvmArg>
			  </jvmArgs>
			</configuration>
		</plugin>
		
	</plugins>
